<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sessionCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <TextView
        android:id="@+id/sessionTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sessionLevelTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Level"
        app:layout_constraintStart_toStartOf="@+id/sessionTitleTv"
        app:layout_constraintTop_toBottomOf="@+id/sessionTitleTv" />

    <TextView
        android:id="@+id/sessionSchedualTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Schedual"
        app:layout_constraintStart_toStartOf="@+id/sessionLevelTv"
        app:layout_constraintTop_toBottomOf="@+id/sessionLevelTv" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>